@model IEnumerable<Model.personAccount>

@{
  ViewBag.Title = "PersonList";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav>
  <h2>Personal Details</h2>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="breadcrumb-item" aria-current="page"> <a href="@Url.Action("CreatePerson", "Person")">Add Person</a></li>
  </ol>
</nav>

<table id="person" class="table">

  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Id Number</th>
      <th>Account Numbers</th>
      <th></th>
    </tr>
  <thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.person.name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.person.surname)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.person.id_number)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.account)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = item.person.code }) |
          @Html.ActionLink("Account Details", "Index", "Accounts", new { id = item.person.code }, "") |
          @Html.ActionLink("Delete", "Delete", new { id = item.person.code })
        </td>
      </tr>
    }
  </tbody>
</table>


@section scripts {

  @Scripts.Render("~/bundles/dataTables")

  <script type="text/javascript">

    $(document).ready(function () {
      $('#person').DataTable();
    });

  </script>
}